{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
